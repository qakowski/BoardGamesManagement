@model IEnumerable<BoardGamesManagement.DTO.GamesListDTO>

@{
    ViewData["Title"] = "Games list";
}

<h1>Games list</h1>

<p>
    <a asp-action="Create">Add new game</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@{ 
    if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                        @Html.ActionLink("Show details", "Details", new { id = item.Id })
                    </td>
                </tr>
        }
    }
    else
    {
        <tr>
            <td>
                No game found
            </td>
        </tr>
        }
    }
    </tbody>
</table>
